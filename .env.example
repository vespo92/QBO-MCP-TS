# QuickBooks OAuth2 Configuration
QB_CLIENT_ID=your_client_id_here
QB_CLIENT_SECRET=your_client_secret_here
QB_REDIRECT_URI=http://localhost:3000/callback
QB_ENVIRONMENT=sandbox # or production
QB_COMPANY_ID=your_company_id_here

# OAuth2 Tokens (will be populated after authentication)
QB_ACCESS_TOKEN=
QB_REFRESH_TOKEN=

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Cache Configuration
CACHE_TTL=3600 # seconds
CACHE_MAX_SIZE=100

# Rate Limiting
RATE_LIMIT_WINDOW=900000 # 15 minutes in ms
RATE_LIMIT_MAX=100 # max requests per window

# SSE Transport Configuration
SSE_HEARTBEAT_INTERVAL=30000 # 30 seconds
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Security
JWT_SECRET=your_jwt_secret_here # for session management
ENCRYPT_TOKENS=false # set to true in production

# API Configuration
QB_API_BASE_URL=https://sandbox-quickbooks.api.intuit.com # or production URL
QB_API_VERSION=v3
QB_API_TIMEOUT=30000 # 30 seconds

# Feature Flags
ENABLE_CACHING=true
ENABLE_RETRY=true
ENABLE_QUEUE=true
ENABLE_HEALTH_CHECK=true